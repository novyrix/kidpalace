// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// Contact form submissions
model ContactSubmission {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  subject   String
  message   String
  createdAt DateTime @default(now())
}

// Admissions inquiries
model AdmissionInquiry {
  id            Int      @id @default(autoincrement())
  parentName    String
  email         String
  phone         String
  childName     String
  childAge      Int
  gradeLevel    String
  school        String   // "grade-school" or "kindergarten"
  message       String?
  createdAt     DateTime @default(now())
}

// News and announcements
model News {
  id          Int      @id @default(autoincrement())
  title       String
  excerpt     String
  content     String
  imageUrl    String?
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Gallery images
model GalleryImage {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  imageUrl    String
  category    String   // "admin", "dining", "education", "grade-school", "kindergarten", "sports"
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
}
